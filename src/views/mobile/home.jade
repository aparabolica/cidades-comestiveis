#mobile-home
	#auth-section(ng-show="!user")
		a.button(href="javascript:void(0);" ng-click="loginDialog()") Entrar
		a.button(href="javascript:void(0);" ng-click="loginDialog()") Cadastre-se
		header
			h2 Entrar
		#auth.clearfix
			.half-group
				.half
					form#login(ng-submit="login(credentials)")
						h3 Fazer login
						p
							label Email
							input(type="email" ng-model="credentials.email")
						p
							label Senha
							input(type="password" ng-model="credentials.password")
						p
							input(type="submit" value="Entrar")
				.half
					form#register(ng-submit="register(newUser)")
						h3 Cadastre-se!
						p
							label Email
							input(type="email" ng-model="newUser.email")
						p
							label Nome
							input(type="text" ng-model="newUser.name")
						p
							label Senha
							input(type="password" ng-model="newUser.password")
						p
							input(type="submit" value="Cadastrar")

	a.logout-button(href="javascript:void(0);" ng-click="logout()" ng-show="user") Sair

	.map(ng-controller="MapCtrl" ng-show="user")
		leaflet#map(defaults="defaults" center="center" markers="markers = (areas | areaToMarker)")

	a.share-button(ng-controller="ItemCtrl" href="javascript:void(0);" ng-click="editDialog()")
		.icon-plus

	.ui-view